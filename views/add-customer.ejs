<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Form Add Customer</h5>

            <% if(typeof errors != "undefined") { %>
            <div class="alert alert-primary" role="alert">
              <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </div>
            <% } %>

            <form action="/data-customer/add" method="post" class="row g-3">
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
                <a href="/data-customer" class="btn btn-primary">Back to previous page</a>
              </div>
            </form>
            <!-- Vertical Form -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
