<main id="main" class="main">
  <div class="pagetitle">
    <h1><%= title %></h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Data Customers</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <a href="/data-customer/add" class="btn btn-primary mb-3">New</a>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Data Customers</h5>

            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Id Customer</th>
                  <th scope="col">Nama</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% customers.forEach((data_customer, index) => { %>
                <!-- scope="row" -->
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= data_customer.id_customer %></td>
                  <td><%= data_customer.nm_customer %></td>
                  <td>
                    <a href="/data-customer/detail-customer/<%= data_customer.id_customer %>" class="btn btn-primary">Detail</a>

                    <a href="/data-customer/update-customer/<%= data_customer.id_customer %>" class="btn btn-primary"> Update </a>

                    <a href="/data-customer/delete-customer/<%= data_customer.id_customer %>" class="btn btn-danger" onclick="return confirm(`Apakah anda yakin ingin menghapusnya? <%= data_customer.nama %>?`)"> Delete </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
