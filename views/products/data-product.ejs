<main id="main" class="main">
  <div class="pagetitle">
    <h1><%= title %></h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Data Products</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <a href="/data-product/add" class="btn btn-primary mb-3">New</a>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Data Products</h5>

            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Id Paket</th>
                  <th scope="col">Jumlah Stok</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach((data_product, index) => { %>
                <!-- scope="row" -->
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= data_product.id_paket %></td>
                  <td><%= data_product.jmlh_stok %></td>
                  <td>
                    <a href="/data-product/detail-product/<%= data_product.id_paket %>" class="btn btn-primary">Detail</a>

                    <a href="/data-product/update-product/<%= data_product.id_paket %>" class="btn btn-primary"> Update </a>

                    <a href="/data-product/delete-product/<%= data_product.id_paket %>" class="btn btn-danger" onclick="return confirm(`Apakah anda yakin ingin menghapusnya? <%= data_product.nama %>?`)"> Delete </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
