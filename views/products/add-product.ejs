<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Form Add Product</h5>

            <% if(typeof errors != "undefined") { %>
            <div class="alert alert-primary" role="alert">
              <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </div>
            <% } %>

            <form action="/data-product/add" method="post" class="row g-3">
              <div class="col-12">
                <label for="id" class="form-label">Id Paket</label>
                <input type="text" class="form-control" id="id_paket" name="id_paket" required />
              </div>
              <div class="col-12">
                <label for="username" class="form-label">Paket Bunga</label>
                <input type="text" class="form-control" id=paket_bunga" name="paket_bunga" required />
              </div>
              <div class="col-12">
                <label for="name" class="form-label">Jumlah Stok</label>
                <input type="text" class="form-control" id="jmlh_stok" name="jmlh_stok" required />
              </div>
              <div class="col-12">
                <label for="email" class="form-label">harga</label>
                <input type="text" class="form-control" id="harga" name="harga" required />
              </div>
              <!-- <div class="col-12">
                      <label for="inputAddress" class="form-label">Address</label>
                      <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                    </div> -->
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Kirim</button>
                <button type="reset" class="btn btn-warning">Reset</button>
                <a href="/data-product" class="btn btn-primary">Kembali</a>
              </div>
            </form>
            <!-- Vertical Form -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
